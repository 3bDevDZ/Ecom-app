{
  "name": "@ecom-app/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build:css && nx serve api",
    "dev:watch": "npm-run-all --parallel dev:css dev:api",
    "dev:css": "sass --watch apps/api/src/styles/main.scss:apps/api/public/css/styles.css",
    "dev:api": "nx serve api",
    "build": "npm run build:css && nx build api",
    "build:css": "sass apps/api/src/styles/main.scss:apps/api/public/css/styles.css --style compressed",
    "build:css:dev": "sass apps/api/src/styles/main.scss:apps/api/public/css/styles.css",
    "start": "node dist/apps/api/main.js",
    "test": "nx test",
    "lint": "nx lint"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express-session": "^1.17.3",
    "hbs": "^4.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@nx/eslint": "22.0.3",
    "@nx/jest": "22.0.3",
    "@nx/js": "22.0.3",
    "@nx/nest": "22.0.3",
    "@nx/node": "22.0.3",
    "@nx/webpack": "22.0.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/forms": "^0.5.10",
    "@types/express-session": "^1.17.10",
    "@types/node": "^18.16.9",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.4.3",
    "npm-run-all": "^4.1.5",
    "nx": "22.0.3",
    "postcss": "^8.5.6",
    "prettier": "^2.6.2",
    "sass": "^1.94.0",
    "tailwindcss": "^4.1.17",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.9.2"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ]
}
