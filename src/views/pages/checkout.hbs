{{!--
  Checkout Page (T170) - Review Your Order with Editable Products
  User Story 2: Add Products to Cart and Checkout
--}}
{{> confirmation-modal}}
<div class="font-display bg-background-light dark:bg-background-dark">
  <div class="relative flex h-auto min-h-screen w-full flex-col group/design-root overflow-x-hidden">
    <main class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12">
      {{!-- Breadcrumbs --}}
      <div class="flex flex-wrap gap-2 mb-8">
        <a class="text-gray-500 dark:text-gray-400 hover:text-primary text-sm font-medium leading-normal" href="/">Home</a>
        <span class="text-gray-500 dark:text-gray-400 text-sm font-medium leading-normal">/</span>
        <a class="text-gray-500 dark:text-gray-400 hover:text-primary text-sm font-medium leading-normal" href="/products">Products</a>
        <span class="text-gray-500 dark:text-gray-400 text-sm font-medium leading-normal">/</span>
        <span class="text-gray-800 dark:text-white text-sm font-medium leading-normal">Cart</span>
      </div>

      {{!-- Page Header --}}
      <div class="flex flex-wrap justify-between items-start gap-6 mb-8">
        <div class="flex min-w-72 flex-col gap-2">
          <p class="text-gray-900 dark:text-white text-3xl lg:text-4xl font-black leading-tight tracking-[-0.033em]">
            Review Your Order</p>
          <p class="text-gray-600 dark:text-gray-400 text-base font-normal leading-normal">Please review the
            items in your cart before proceeding to checkout.</p>
        </div>
        <a class="inline-flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white text-sm font-bold leading-normal tracking-[0.015em] hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
          href="/products">
          <span class="truncate">Continue Shopping</span>
        </a>
      </div>

      {{#if cart.items.length}}
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12 items-start">
          {{!-- Products Table --}}
          <div class="lg:col-span-2 @container">
            <div class="overflow-hidden rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-background-dark">
              <div class="overflow-x-auto">
                <table class="w-full">
                  <thead>
                    <tr class="bg-gray-50 dark:bg-gray-800">
                      <th class="px-6 py-4 text-left text-gray-800 dark:text-gray-300 text-xs font-medium uppercase tracking-wider w-2/5">
                        Product</th>
                      <th class="px-6 py-4 text-left text-gray-800 dark:text-gray-300 text-xs font-medium uppercase tracking-wider w-1/5">
                        Unit Price</th>
                      <th class="px-6 py-4 text-left text-gray-800 dark:text-gray-300 text-xs font-medium uppercase tracking-wider w-1/5">
                        Quantity</th>
                      <th class="px-6 py-4 text-left text-gray-800 dark:text-gray-300 text-xs font-medium uppercase tracking-wider w-1/5">
                        Line Total</th>
                      <th class="px-6 py-4 text-left w-12"><span class="sr-only">Remove</span></th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each cart.items}}
                      <tr class="border-t border-gray-200 dark:border-gray-700">
                        <td class="px-6 py-4 align-middle">
                          <div class="flex items-center gap-4">
                            <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-lg w-16 bg-gray-200 dark:bg-gray-700"
                              data-alt="{{this.productName}}"
                              style='background-image: url("{{#if this.imageUrl}}{{this.imageUrl}}{{else}}https://via.placeholder.com/64?text=Product{{/if}}");'>
                            </div>
                            <div>
                              <p class="font-semibold text-gray-800 dark:text-white">{{this.productName}}</p>
                              <p class="text-gray-500 dark:text-gray-400 text-sm">SKU: {{this.sku}}</p>
                            </div>
                          </div>
                        </td>
                        <td class="px-6 py-4 text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal align-middle">
                          {{this.unitPriceFormatted}}</td>
                        <td class="px-6 py-4 align-middle">
                          <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-md overflow-hidden w-28">
                            <button onclick="updateQuantity('{{../cart.id}}', '{{this.id}}', {{math this.quantity "-" 1}})"
                              class="px-2 py-1 text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
                              {{#if (eq this.quantity 1)}}disabled{{/if}}>-</button>
                            <input type="number" id="quantity-{{this.id}}" value="{{this.quantity}}" min="1" max="100"
                              class="w-full text-center border-x border-gray-300 dark:border-gray-600 bg-transparent focus:ring-0 focus:border-x focus:border-primary p-1 text-gray-900 dark:text-white"
                              onchange="updateQuantity('{{../cart.id}}', '{{this.id}}', this.value)"
                              onblur="if(this.value < 1) this.value = 1; updateQuantity('{{../cart.id}}', '{{this.id}}', this.value)">
                            <button onclick="updateQuantity('{{../cart.id}}', '{{this.id}}', {{math this.quantity "+" 1}})"
                              class="px-2 py-1 text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">+</button>
                          </div>
                        </td>
                        <td class="px-6 py-4 text-gray-800 dark:text-white font-semibold text-sm leading-normal align-middle">
                          {{this.lineTotalFormatted}}</td>
                        <td class="px-6 py-4 align-middle">
                          <button onclick="removeItem('{{../cart.id}}', '{{this.id}}')"
                            class="text-gray-500 dark:text-gray-400 hover:text-red-500 dark:hover:text-red-400 transition-colors">
                            <span class="material-symbols-outlined text-xl">delete</span>
                          </button>
                        </td>
                      </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          {{!-- Order Summary Sidebar --}}
          <div class="lg:col-span-1">
            <div class="sticky top-8 rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-background-dark p-6">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6">Order Summary</h3>
              <div class="space-y-4 mb-6">
                <div class="flex justify-between items-center">
                  <p class="text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal">Subtotal</p>
                  <p class="text-gray-800 dark:text-white text-sm font-medium leading-normal text-right">
                    {{cart.subtotal}}</p>
                </div>
                <div class="flex justify-between items-center">
                  <p class="text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal">Discount</p>
                  <p class="text-gray-800 dark:text-white text-sm font-medium leading-normal text-right">
                    $0.00</p>
                </div>
                <div class="flex justify-between items-center">
                  <p class="text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal">Taxes</p>
                  <p class="text-gray-800 dark:text-white text-sm font-medium leading-normal text-right">
                    {{cart.tax}}</p>
                </div>
              </div>
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                  for="discount-code">Discount Code</label>
                <div class="flex gap-2">
                  <input
                    class="flex-grow rounded-lg border-gray-300 dark:border-gray-600 bg-background-light dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-primary focus:border-primary"
                    id="discount-code" placeholder="Enter code" type="text" />
                  <button
                    class="flex min-w-[84px] cursor-pointer items-center justify-center rounded-lg h-11 px-4 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white text-sm font-bold leading-normal hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">Apply</button>
                </div>
              </div>
              <div class="border-t border-gray-200 dark:border-gray-700 pt-6 space-y-4">
                <div class="flex justify-between items-center text-lg font-bold">
                  <p class="text-gray-800 dark:text-white">Grand Total</p>
                  <p class="text-gray-900 dark:text-white text-right">{{cart.total}}</p>
                </div>
                <a href="/checkout/payment"
                  class="w-full flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 px-4 bg-primary text-white text-base font-bold leading-normal tracking-[0.015em] hover:bg-primary/90 transition-colors">
                  <span class="truncate">Proceed to Checkout</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      {{else}}
        {{!-- Empty Cart State --}}
        <div class="bg-white dark:bg-background-dark rounded-lg shadow-md p-12 text-center">
          <svg class="mx-auto h-24 w-24 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-2">Your cart is empty</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-6">Add some products to get started</p>
          <a href="/products"
            class="inline-block bg-primary text-white py-3 px-8 rounded-lg hover:bg-primary/90 transition font-medium">
            Browse Products</a>
        </div>
      {{/if}}
    </main>
  </div>
</div>

{{!-- JavaScript for cart interactions --}}
<script>
  async function updateQuantity(cartId, itemId, quantity) {
    const qty = parseInt(quantity);
    if (isNaN(qty) || qty < 1) {
      alert('Quantity must be at least 1');
      return;
    }

    try {
      const response = await fetch(`/api/cart/items/${itemId}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        credentials: 'include',
        body: JSON.stringify({ quantity: qty }),
      });

      if (response.ok) {
        const cartData = await response.json();
        // Update cart count and reload page to reflect changes
        if (typeof window.updateCartCount === 'function') {
          // Use itemCount (number of unique products) or items.length as fallback
          const totalItems = cartData.itemCount !== undefined ? cartData.itemCount : (cartData.items?.length || 0);
          window.updateCartCount(totalItems);
        }
        location.reload();
      } else {
        const error = await response.json();
        alert(`Failed to update quantity: ${error.message || 'Please try again'}`);
      }
    } catch (error) {
      console.error('Error updating quantity:', error);
      alert('An error occurred while updating the cart');
    }
  }

  async function removeItem(cartId, itemId) {
    try {
      await window.showConfirmationModal(
        'Remove Item',
        'Are you sure you want to remove this item from your cart?',
        'Remove',
        'Cancel'
      );
    } catch (error) {
      // User cancelled
      return;
    }

    try {
      const response = await fetch(`/api/cart/items/${itemId}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
        },
        credentials: 'include',
      });

      if (response.ok) {
        const cartData = await response.json();
        // Update cart count and reload page
        if (typeof window.updateCartCount === 'function') {
          // Use itemCount (number of unique products) or items.length as fallback
          const totalItems = cartData.itemCount !== undefined ? cartData.itemCount : (cartData.items?.length || 0);
          window.updateCartCount(totalItems);
        }
        location.reload();
      } else {
        const error = await response.json();
        alert(`Failed to remove item: ${error.message || 'Please try again'}`);
      }
    } catch (error) {
      console.error('Error removing item:', error);
      alert('An error occurred while removing the item');
    }
  }
</script>
