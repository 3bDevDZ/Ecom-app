{{!--
  Badge Atom Component
  Usage: {{> badge text="In Stock" variant="success" size="sm"}}
--}}
{{#if variant}}
  {{#ifEquals variant "success"}}
    <span class="inline-flex items-center gap-1.5 rounded-full px-2 py-1 text-xs font-medium bg-green-100 dark:bg-green-900/50 text-green-700 dark:text-green-300">
      {{#if showDot}}<span class="size-1.5 rounded-full bg-green-500"></span>{{/if}}
      {{text}}
    </span>
  {{else ifEquals variant "warning"}}
    <span class="inline-flex items-center gap-1.5 rounded-full px-2 py-1 text-xs font-medium bg-yellow-100 dark:bg-yellow-900/50 text-yellow-800 dark:text-yellow-300">
      {{#if showDot}}<span class="size-1.5 rounded-full bg-yellow-500"></span>{{/if}}
      {{text}}
    </span>
  {{else ifEquals variant "error"}}
    <span class="inline-flex items-center gap-1.5 rounded-full px-2 py-1 text-xs font-medium bg-red-100 dark:bg-red-900/50 text-red-700 dark:text-red-300">
      {{#if showDot}}<span class="size-1.5 rounded-full bg-red-500"></span>{{/if}}
      {{text}}
    </span>
  {{else ifEquals variant "info"}}
    <span class="inline-flex items-center gap-1.5 rounded-full px-2 py-1 text-xs font-medium bg-blue-100 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300">
      {{#if showDot}}<span class="size-1.5 rounded-full bg-blue-500"></span>{{/if}}
      {{text}}
    </span>
  {{else ifEquals variant "primary"}}
    <span class="inline-flex items-center gap-1.5 rounded-full px-2 py-1 text-xs font-medium bg-primary/20 text-primary">
      {{#if showDot}}<span class="size-1.5 rounded-full bg-primary"></span>{{/if}}
      {{text}}
    </span>
  {{else}}
    <span class="inline-flex items-center gap-1.5 rounded-full px-2 py-1 text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300">
      {{#if showDot}}<span class="size-1.5 rounded-full bg-gray-500"></span>{{/if}}
      {{text}}
    </span>
  {{/ifEquals}}
{{else}}
  <span class="inline-flex items-center gap-1.5 rounded-full px-2 py-1 text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300">
    {{#if showDot}}<span class="size-1.5 rounded-full bg-gray-500"></span>{{/if}}
    {{text}}
  </span>
{{/if}}


