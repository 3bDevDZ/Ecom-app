{{!--
  Atom: Material Icon
  A wrapper for Material Symbols icons
--}}

<span class="material-symbols-outlined {{size}} {{className}}">{{icon}}</span>

{{!
Parameters:
- icon: Icon name from Material Symbols (required)
- size: text-sm, text-base, text-lg, text-xl, text-2xl (default: text-2xl)
- className: additional classes
}}
