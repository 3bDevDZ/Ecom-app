{{!-- Text Atom --}}
<p 
  class="{{className 'text' variant size weight}}"
  {{#if id}}id="{{id}}"{{/if}}
>
  {{content}}
</p>

{{! 
Parameters:
- content: Text content (required)
- variant: text-primary, text-secondary, text-muted, text-success, text-warning, text-error (default: text-primary)
- size: text-xs, text-sm, text-base, text-lg, text-xl, text-2xl, text-3xl (default: text-base)
- weight: font-normal, font-medium, font-semibold, font-bold (default: font-normal)
- id: element id
- className: additional classes
}}
