{{!--
  Quantity Selector Molecule Component
  Usage: {{> quantity-selector value=1 min=1 max=10 productId=product.id }}
--}}
<div class="flex items-center rounded-lg border border-slate-300 dark:border-slate-600">
  <button
    class="px-3 py-2 text-slate-500 dark:text-slate-400 rounded-l-lg hover:bg-slate-100 dark:hover:bg-slate-700"
    onclick="decreaseQuantity(this)"
    data-min="{{min}}"
    type="button">
    -
  </button>
  <input
    {{#if id}}id="{{id}}"{{/if}}
    class="w-16 text-center border-0 bg-transparent text-slate-800 dark:text-white focus:ring-0"
    type="number"
    value="{{value}}"
    min="{{min}}"
    {{#if max}}max="{{max}}"{{/if}}
    data-product-id="{{productId}}"
    readonly
  />
  <button
    class="px-3 py-2 text-slate-500 dark:text-slate-400 rounded-r-lg hover:bg-slate-100 dark:hover:bg-slate-700"
    onclick="increaseQuantity(this)"
    {{#if max}}data-max="{{max}}"{{/if}}
    type="button">
    +
  </button>
</div>

