{{!--
  Header Organism
  Top navigation bar with logo, search, and user menu
  Based on design template styling
--}}
<header class="flex items-center justify-between whitespace-nowrap border-b border-solid border-gray-200 dark:border-gray-700 px-4 sm:px-6 lg:px-10 py-3 bg-white dark:bg-background-dark sticky top-0 z-50">
    <div class="flex items-center gap-8">
        <div class="flex items-center gap-4 text-gray-900 dark:text-white">
            <div class="size-6 text-primary">
                <span class="material-symbols-outlined !text-3xl">all_inbox</span>
            </div>
            <h2 class="text-lg font-bold leading-tight tracking-[-0.015em]">B2B Solutions</h2>
        </div>
        <label class="hidden md:flex flex-col min-w-40 !h-10 max-w-64">
            {{> search-bar placeholder="Search products..." value="" id="navbar-search" }}
        </label>
    </div>
    <div class="flex flex-1 justify-end gap-2 md:gap-8">
        <div class="hidden lg:flex items-center gap-9">
            <a class="text-gray-800 dark:text-white text-sm font-medium leading-normal hover:text-primary" href="/products">Products</a>
            <a class="text-gray-800 dark:text-white text-sm font-medium leading-normal hover:text-primary" href="/categories">Categories</a>
            <a class="text-gray-800 dark:text-white text-sm font-medium leading-normal hover:text-primary" href="/orders">Orders</a>
            <a class="text-gray-800 dark:text-white text-sm font-medium leading-normal hover:text-primary" href="#">Support</a>
        </div>
        <div class="flex gap-2">
            {{#if isAuthenticated}}
                <a href="/logout" class="hidden sm:flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-white text-sm font-bold leading-normal tracking-[0.015em] hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                    <span class="truncate">Logout</span>
                </a>
            {{else}}
                <a href="/login" class="hidden sm:flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 bg-primary text-white text-sm font-bold leading-normal tracking-[0.015em] hover:bg-primary/90 transition-colors">
                    <span class="truncate">Sign In</span>
                </a>
            {{/if}}
            <a href="/categories" class="flex max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 bg-background-light dark:bg-gray-800 text-gray-800 dark:text-white gap-2 text-sm font-bold leading-normal tracking-[0.015em] min-w-0 px-2.5" title="Categories">
                <span class="material-symbols-outlined text-xl">category</span>
            </a>
            <button class="flex max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 bg-background-light dark:bg-gray-800 text-gray-800 dark:text-white gap-2 text-sm font-bold leading-normal tracking-[0.015em] min-w-0 px-2.5" title="Favorites">
                <span class="material-symbols-outlined text-xl">favorite</span>
            </button>
            {{#if isAuthenticated}}
                <a href="/checkout" class="relative flex max-w-[480px] cursor-pointer items-center justify-center overflow-visible rounded-lg h-10 bg-background-light dark:bg-gray-800 text-gray-800 dark:text-white gap-2 text-sm font-bold leading-normal tracking-[0.015em] min-w-0 px-2.5 transition-transform hover:scale-105" title="Shopping Cart" id="cart-icon-link">
                    <span class="material-symbols-outlined text-xl">shopping_cart</span>
                    <span id="cart-count-badge" class="absolute -top-1 -right-1 min-w-[20px] h-5 px-1.5 rounded-full bg-red-500 text-white text-xs font-bold items-center justify-center shadow-lg border-2 border-white dark:border-gray-800 transition-all duration-300 z-[9999]" style="top: -4px; right: -4px; display: none;">0</span>
                </a>
            {{/if}}
        </div>
        {{#if isAuthenticated}}
            <div class="hidden sm:block bg-center bg-no-repeat aspect-square bg-cover rounded-full size-10" data-alt="User profile picture" style='background-image: url("https://via.placeholder.com/40");'></div>
        {{/if}}
    </div>
</header>
