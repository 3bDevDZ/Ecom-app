{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "pnpm run start:dev",
        "cwd": "apps/api"
      },
      "configurations": {
        "development": {
          "command": "pnpm run start:dev",
          "cwd": "apps/api"
        },
        "production": {
          "command": "node dist/main.js",
          "cwd": "apps/api"
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "defaultConfiguration": "production",
      "options": {
        "command": "pnpm run build",
        "cwd": "apps/api"
      },
      "configurations": {
        "development": {
          "command": "pnpm run build"
        },
        "production": {
          "command": "pnpm run build"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/api"],
      "options": {
        "jestConfig": "apps/api/jest.config.js",
        "passWithNoTests": false
      },
      "configurations": {
        "ci": {
          "ci": true,
          "coverage": true,
          "coverageReporters": ["text", "lcov"]
        }
      }
    },
    "e2e": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/api-e2e"],
      "options": {
        "jestConfig": "apps/api/test/jest-e2e.json",
        "passWithNoTests": false
      }
    },
    "migration:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run typeorm -- migration:run -d apps/api/src/config/typeorm.config.ts",
        "cwd": "apps/api"
      }
    },
    "migration:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run typeorm -- migration:generate -d apps/api/src/config/typeorm.config.ts",
        "cwd": "apps/api"
      }
    },
    "migration:revert": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run typeorm -- migration:revert -d apps/api/src/config/typeorm.config.ts",
        "cwd": "apps/api"
      }
    }
  },
  "tags": ["type:app", "scope:backend"]
}

