{{> header}}

<main class="flex-1 bg-background-light dark:bg-background-dark">
    <div class="page-container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">Shopping Cart</h1>
            <p class="page-subtitle">Review your items before checkout</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Cart Items -->
            <div class="lg:col-span-2 space-y-4">
                {{#each cartItems}}
                    <div class="card p-6">
                        <div class="flex flex-col sm:flex-row gap-6">
                            <!-- Product Image -->
                            <div class="w-full sm:w-32 h-32 flex-shrink-0">
                                <img src="{{this.product.image}}" alt="{{this.product.name}}" class="w-full h-full object-cover rounded-lg">
                            </div>

                            <!-- Product Details -->
                            <div class="flex-1 space-y-3">
                                <div>
                                    <h3 class="text-lg font-semibold text-text-headings dark:text-text-headings-dark">
                                        <a href="/products/{{this.product.id}}" class="hover:text-primary dark:hover:text-secondary">
                                            {{this.product.name}}
                                        </a>
                                    </h3>
                                    <p class="text-sm text-text-light dark:text-text-dark">
                                        {{this.product.category}}
                                    </p>
                                </div>

                                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                                    <!-- Quantity Selector -->
                                    <div class="flex items-center gap-3">
                                        <button class="btn btn-outline btn-sm" onclick="updateQuantity('{{this.id}}', {{this.quantity}}-1)">
                                            <span class="material-symbols-outlined text-sm">remove</span>
                                        </button>
                                        <span class="w-12 text-center font-semibold">{{this.quantity}}</span>
                                        <button class="btn btn-outline btn-sm" onclick="updateQuantity('{{this.id}}', {{this.quantity}}+1)">
                                            <span class="material-symbols-outlined text-sm">add</span>
                                        </button>
                                    </div>

                                    <!-- Price and Remove -->
                                    <div class="flex items-center gap-6">
                                        <div class="text-xl font-bold text-primary dark:text-secondary">
                                            ${{this.total}}
                                        </div>
                                        <button class="text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300" onclick="removeItem('{{this.id}}')">
                                            <span class="material-symbols-outlined">delete</span>
                                        </button>
                                    </div>
                                </div>

                                {{#if this.product.inStock}}
                                    <div class="flex items-center gap-2 text-sm text-green-600 dark:text-green-400">
                                        <span class="material-symbols-outlined text-sm">check_circle</span>
                                        <span>In Stock</span>
                                    </div>
                                {{else}}
                                    <div class="flex items-center gap-2 text-sm text-red-600 dark:text-red-400">
                                        <span class="material-symbols-outlined text-sm">error</span>
                                        <span>Out of Stock</span>
                                    </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                {{else}}
                    <div class="card p-12 text-center">
                        <span class="material-symbols-outlined text-6xl text-gray-300 dark:text-gray-600 mb-4">shopping_cart</span>
                        <h3 class="text-xl font-semibold text-text-headings dark:text-text-headings-dark mb-2">Your cart is empty</h3>
                        <p class="text-text-light dark:text-text-dark mb-6">Add some products to get started</p>
                        <a href="/products" class="btn btn-primary">
                            Browse Products
                        </a>
                    </div>
                {{/each}}
            </div>

            <!-- Order Summary -->
            {{#if cartItems}}
                <div class="lg:col-span-1">
                    <div class="card sticky top-24">
                        <div class="card-header">
                            <h2 class="text-xl font-bold text-text-headings dark:text-text-headings-dark">Order Summary</h2>
                        </div>
                        <div class="card-body space-y-4">
                            <div class="flex justify-between text-text-light dark:text-text-dark">
                                <span>Subtotal ({{itemCount}} items)</span>
                                <span class="font-semibold">${{subtotal}}</span>
                            </div>

                            <div class="flex justify-between text-text-light dark:text-text-dark">
                                <span>Shipping</span>
                                <span class="font-semibold">
                                    {{#if freeShipping}}
                                        <span class="text-green-600 dark:text-green-400">Free</span>
                                    {{else}}
                                        ${{shipping}}
                                    {{/if}}
                                </span>
                            </div>

                            {{#if discount}}
                                <div class="flex justify-between text-green-600 dark:text-green-400">
                                    <span>Discount</span>
                                    <span class="font-semibold">-${{discount}}</span>
                                </div>
                            {{/if}}

                            <div class="flex justify-between text-text-light dark:text-text-dark">
                                <span>Tax</span>
                                <span class="font-semibold">${{tax}}</span>
                            </div>

                            <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                                <div class="flex justify-between items-baseline">
                                    <span class="text-lg font-semibold text-text-headings dark:text-text-headings-dark">Total</span>
                                    <span class="text-2xl font-bold text-primary dark:text-secondary">${{total}}</span>
                                </div>
                            </div>

                            <!-- Promo Code -->
                            <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                                <form class="space-y-3" onsubmit="applyPromoCode(event)">
                                    <label class="form-label">Promo Code</label>
                                    <div class="flex gap-2">
                                        <input type="text" id="promoCode" class="form-input flex-1" placeholder="Enter code">
                                        <button type="submit" class="btn btn-outline">Apply</button>
                                    </div>
                                </form>
                            </div>

                            {{#unless freeShipping}}
                                <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 text-sm">
                                    <p class="text-blue-800 dark:text-blue-200">
                                        Add ${{remainingForFreeShipping}} more to qualify for free shipping!
                                    </p>
                                </div>
                            {{/unless}}
                        </div>
                        <div class="card-footer">
                            <a href="/checkout" class="btn btn-primary w-full btn-lg">
                                Proceed to Checkout
                            </a>
                            <a href="/products" class="btn btn-outline w-full mt-3">
                                Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>

        <!-- Recommended Products -->
        {{#if recommendedProducts}}
            <div class="mt-16">
                <h2 class="text-2xl font-bold text-text-headings dark:text-text-headings-dark mb-6">You might also like</h2>
                <div class="grid grid-cols-2 gap-6 sm:grid-cols-2 lg:grid-cols-4">
                    {{#each recommendedProducts}}
                        <div class="product-card">
                            <a href="/products/{{this.id}}" class="block">
                                <div class="product-image-wrapper">
                                    <img src="{{this.image}}" alt="{{this.name}}" class="product-image">
                                </div>
                                <div class="mt-3">
                                    <h3 class="text-sm font-semibold text-text-headings dark:text-text-headings-dark line-clamp-2">
                                        {{this.name}}
                                    </h3>
                                    <div class="mt-2 text-lg font-bold text-primary dark:text-secondary">
                                        ${{this.price}}
                                    </div>
                                </div>
                            </a>
                        </div>
                    {{/each}}
                </div>
            </div>
        {{/if}}
    </div>
</main>

{{> footer}}

<script>
function updateQuantity(itemId, newQuantity) {
    if (newQuantity < 1) return;

    fetch('/api/cart/update', {
        method: 'PUT',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ itemId, quantity: newQuantity })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Error updating quantity');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error updating quantity');
    });
}

function removeItem(itemId) {
    if (!confirm('Are you sure you want to remove this item?')) return;

    fetch(`/api/cart/remove/${itemId}`, {
        method: 'DELETE'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Error removing item');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error removing item');
    });
}

function applyPromoCode(event) {
    event.preventDefault();
    const code = document.getElementById('promoCode').value;

    fetch('/api/cart/promo', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ code })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Promo code applied!');
            location.reload();
        } else {
            alert('Invalid promo code');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error applying promo code');
    });
}
</script>
