<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>{{title}} - E-commerce Platform</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
</head>

<body class="font-display bg-background-light dark:bg-background-dark">
    <div class="relative flex h-auto min-h-screen w-full flex-col group/design-root overflow-x-hidden">
        <!-- Top Navigation Bar -->
        <header class="flex items-center justify-between whitespace-nowrap border-b border-solid border-gray-200 dark:border-gray-700 px-6 sm:px-10 lg:px-20 py-3 bg-white dark:bg-background-dark">
            <div class="flex items-center gap-4 text-gray-900 dark:text-white">
                <div class="size-6 text-primary">
                    <svg fill="none" viewbox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                        <path clip-rule="evenodd" d="M24 4H6V17.3333V30.6667H24V44H42V30.6667V17.3333H24V4Z" fill="currentColor" fill-rule="evenodd"></path>
                    </svg>
                </div>
                <h2 class="text-gray-900 dark:text-white text-lg font-bold leading-tight tracking-[-0.015em]">E-commerce Platform</h2>
            </div>
            <div class="hidden lg:flex flex-1 justify-center gap-8">
                <nav class="flex items-center gap-9">
                    <a class="nav-link" href="/dashboard">Dashboard</a>
                    <a class="nav-link" href="/products">Products</a>
                    <a class="nav-link" href="/cart">
                        <span class="text-primary">Cart</span>
                        <span class="material-symbols-outlined ml-1">shopping_cart</span>
                    </a>
                    <a class="nav-link" href="/orders">Orders</a>
                </nav>
            </div>
            <div class="flex items-center gap-2">
                <button class="btn btn-sm btn-outline">
                    <span class="material-symbols-outlined">notifications</span>
                </button>
                <button class="btn btn-sm btn-outline">
                    <span class="material-symbols-outlined">person</span>
                </button>
            </div>
        </header>

        <!-- Main Content -->
        <main class="page-container">
            <!-- Breadcrumb -->
            <div class="flex flex-wrap gap-2 mb-8">
                <a class="text-gray-500 dark:text-gray-400 hover:text-primary text-sm font-medium leading-normal" href="/dashboard">Home</a>
                <span class="text-gray-500 dark:text-gray-400 text-sm font-medium leading-normal">/</span>
                <a class="text-gray-500 dark:text-gray-400 hover:text-primary text-sm font-medium leading-normal" href="/products">Products</a>
                <span class="text-gray-500 dark:text-gray-400 text-sm font-medium leading-normal">/</span>
                <span class="text-gray-800 dark:text-white text-sm font-medium leading-normal">Cart</span>
            </div>

            <!-- Page Header -->
            <div class="page-header">
                <div class="flex flex-wrap justify-between items-start gap-6">
                    <div>
                        <h1 class="page-title">Shopping Cart</h1>
                        <p class="page-subtitle">Review your items before checkout</p>
                    </div>
                    <a class="btn btn-outline btn-sm" href="/products">
                        <span class="material-symbols-outlined mr-2">arrow_back</span>
                        Continue Shopping
                    </a>
                </div>
            </div>

            {{#if cartItems.length}}
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12 items-start">
                    <!-- Cart Items Table -->
                    <div class="lg:col-span-2 @container">
                        <div class="card">
                            <div class="overflow-x-auto">
                                <table class="w-full">
                                    <thead>
                                        <tr class="bg-gray-50 dark:bg-gray-800">
                                            <th class="px-6 py-4 text-left text-gray-800 dark:text-gray-300 text-xs font-medium uppercase tracking-wider w-2/5">
                                                Product
                                            </th>
                                            <th class="px-6 py-4 text-left text-gray-800 dark:text-gray-300 text-xs font-medium uppercase tracking-wider w-1/5">
                                                Unit Price
                                            </th>
                                            <th class="px-6 py-4 text-left text-gray-800 dark:text-gray-300 text-xs font-medium uppercase tracking-wider w-1/5">
                                                Quantity
                                            </th>
                                            <th class="px-6 py-4 text-left text-gray-800 dark:text-gray-300 text-xs font-medium uppercase tracking-wider w-1/5">
                                                Line Total
                                            </th>
                                            <th class="px-6 py-4 text-left w-12"><span class="sr-only">Remove</span></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each cartItems}}
                                        <tr class="border-t border-gray-200 dark:border-gray-700">
                                            <td class="px-6 py-4 align-middle">
                                                <div class="flex items-center gap-4">
                                                    <div class="product-image-wrapper w-16">
                                                        <div class="product-image" data-alt="{{this.name}}" style='background-image: url("{{this.image}}");'></div>
                                                    </div>
                                                    <div>
                                                        <p class="font-semibold text-gray-800 dark:text-white">{{this.name}}</p>
                                                        <p class="text-gray-500 dark:text-gray-400 text-sm">{{this.category}}</p>
                                                        {{#if this.inStock}}
                                                            <span class="product-badge badge-success">In Stock</span>
                                                        {{else}}
                                                            <span class="product-badge badge-danger">Out of Stock</span>
                                                        {{/if}}
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal align-middle">
                                                ${{this.price}}
                                            </td>
                                            <td class="px-6 py-4 align-middle">
                                                <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-md overflow-hidden w-28">
                                                    <button class="px-2 py-1 text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" onclick="updateQuantity('{{@index}}', {{this.quantity}} - 1)">-</button>
                                                    <input class="w-full text-center border-x border-gray-300 dark:border-gray-600 bg-transparent focus:ring-0 focus:border-x focus:border-primary p-1" type="text" value="{{this.quantity}}" />
                                                    <button class="px-2 py-1 text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" onclick="updateQuantity('{{@index}}', {{this.quantity}} + 1)">+</button>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 text-gray-800 dark:text-white font-semibold text-sm leading-normal align-middle">
                                                ${{this.total}}
                                            </td>
                                            <td class="px-6 py-4 align-middle">
                                                <button class="text-gray-500 dark:text-gray-400 hover:text-red-500 dark:hover:text-red-400 transition-colors" onclick="removeItem('{{@index}}')">
                                                    <span class="material-symbols-outlined text-xl">delete</span>
                                                </button>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Order Summary -->
                    <div class="lg:col-span-1">
                        <div class="card sticky top-8">
                            <div class="card-body">
                                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6">Order Summary</h3>
                                
                                <div class="space-y-4 mb-6">
                                    <div class="flex justify-between items-center">
                                        <p class="text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal">Subtotal ({{cartItems.length}} items)</p>
                                        <p class="text-gray-800 dark:text-white text-sm font-medium leading-normal text-right">
                                            ${{subtotal}}
                                        </p>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <p class="text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal">Shipping</p>
                                        <p class="text-gray-800 dark:text-white text-sm font-medium leading-normal text-right">
                                            {{#if freeShipping}}
                                                <span class="text-green-600 dark:text-green-400">Free</span>
                                            {{else}}
                                                ${{shipping}}
                                            {{/if}}
                                        </p>
                                    </div>
                                    {{#if discount}}
                                        <div class="flex justify-between items-center">
                                            <p class="text-green-600 dark:text-green-400 text-sm font-normal leading-normal">Discount</p>
                                            <p class="text-green-600 dark:text-green-400 text-sm font-medium leading-normal text-right">-${{discount}}</p>
                                        </div>
                                    {{/if}}
                                    <div class="flex justify-between items-center">
                                        <p class="text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal">Tax</p>
                                        <p class="text-gray-800 dark:text-white text-sm font-medium leading-normal text-right">${{tax}}</p>
                                    </div>
                                </div>

                                <!-- Promo Code -->
                                <div class="mb-6">
                                    <label class="form-label" for="discount-code">Promo Code</label>
                                    <div class="flex gap-2">
                                        <input class="form-input flex-grow" id="discount-code" placeholder="Enter code" type="text" />
                                        <button class="btn btn-secondary btn-sm" onclick="applyPromoCode()">Apply</button>
                                    </div>
                                </div>

                                {{#unless freeShipping}}
                                    <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 text-sm mb-6">
                                        <p class="text-blue-800 dark:text-blue-200">
                                            Add ${{remainingForFreeShipping}} more to qualify for free shipping!
                                        </p>
                                    </div>
                                {{/unless}}

                                <!-- Total -->
                                <div class="border-t border-gray-200 dark:border-gray-700 pt-6 space-y-4">
                                    <div class="flex justify-between items-center text-lg font-bold">
                                        <p class="text-gray-800 dark:text-white">Total</p>
                                        <p class="text-gray-900 dark:text-white text-right">${{total}}</p>
                                    </div>
                                    <button class="btn btn-primary btn-lg w-full" onclick="proceedToCheckout()">
                                        <span class="material-symbols-outlined mr-2">lock</span>
                                        <span class="truncate">Proceed to Checkout</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{else}}
                <!-- Empty Cart -->
                <div class="text-center py-16">
                    <div class="card p-12 max-w-md mx-auto">
                        <span class="material-symbols-outlined text-6xl text-gray-400 mb-6">shopping_cart</span>
                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Your cart is empty</h3>
                        <p class="text-gray-600 dark:text-gray-400 mb-8">Add some products to get started</p>
                        <a href="/products" class="btn btn-primary">
                            <span class="material-symbols-outlined">storefront</span>
                            Browse Products
                        </a>
                    </div>
                </div>
            {{/if}}

            <!-- Recommended Products -->
            {{#if recommendedProducts}}
                <div class="mt-16">
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">You might also like</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                        {{#each recommendedProducts}}
                            <div class="product-card">
                                <div class="relative">
                                    <div class="product-image-wrapper">
                                        <div class="product-image" data-alt="{{this.name}}" style='background-image: url("{{this.image}}");'></div>
                                    </div>
                                    {{#if this.inStock}}
                                        <span class="product-badge badge-success">
                                            <span class="size-1.5 rounded-full bg-green-500"></span> In Stock
                                        </span>
                                    {{else}}
                                        <span class="product-badge badge-danger">
                                            <span class="size-1.5 rounded-full bg-red-500"></span> Out of Stock
                                        </span>
                                    {{/if}}
                                </div>
                                <div class="p-4">
                                    <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{{this.name}}</h3>
                                    <p class="text-gray-600 dark:text-gray-400 text-sm mb-3">{{this.category}}</p>
                                    <div class="flex items-center justify-between">
                                        <p class="text-lg font-bold text-gray-900 dark:text-white">${{this.price}}</p>
                                        <button class="btn btn-primary btn-sm" {{#unless this.inStock}}disabled{{/unless}}>
                                            Add to Cart
                                        </button>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            {{/if}}
        </main>
    </div>

    <script>
        function updateQuantity(index, newQuantity) {
            if (newQuantity < 1) return;
            console.log(`Update quantity: ${index} -> ${newQuantity}`);
            // Add your cart update logic here
        }

        function removeItem(index) {
            if (!confirm('Are you sure you want to remove this item?')) return;
            console.log(`Remove item: ${index}`);
            // Add your cart remove logic here
        }

        function applyPromoCode() {
            const code = document.getElementById('discount-code').value;
            if (!code) {
                alert('Please enter a promo code');
                return;
            }
            console.log(`Apply promo code: ${code}`);
            // Add your promo code logic here
        }

        function proceedToCheckout() {
            console.log('Proceed to checkout');
            // Add your checkout navigation logic here
        }
    </script>
</body>
</html>
