<header class="absolute top-0 left-0 w-full px-4 sm:px-6 lg:px-8 py-4 z-10">
    <div class="flex items-center gap-3 text-text-headings dark:text-text-headings-dark">
        <div class="size-6 text-primary dark:text-secondary">
            <svg fill="none" viewbox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                <path
                    d="M36.7273 44C33.9891 44 31.6043 39.8386 30.3636 33.69C29.123 39.8386 26.7382 44 24 44C21.2618 44 18.877 39.8386 17.6364 33.69C16.3957 39.8386 14.0109 44 11.2727 44C7.25611 44 4 35.0457 4 24C4 12.9543 7.25611 4 11.2727 4C14.0109 4 16.3957 8.16144 17.6364 14.31C18.877 8.16144 21.2618 4 24 4C26.7382 4 29.123 8.16144 30.3636 14.31C31.6043 8.16144 33.9891 4 36.7273 4C40.7439 4 44 12.9543 44 24C44 35.0457 40.7439 44 36.7273 44Z"
                    fill="currentColor"></path>
            </svg>
        </div>
        <h2 class="text-lg font-bold leading-tight tracking-[-0.015em]">SourcePlatform</h2>
    </div>
</header>

<main class="flex h-screen w-full flex-1">
    <div class="flex h-full w-full">
        <!-- Left Column (Branding Panel) -->
        <div class="hidden lg:flex lg:w-1/2 bg-gray-100 dark:bg-background-dark/50 relative items-center justify-center p-12">
            <div class="absolute inset-0 bg-cover bg-center"
                style="background-image: url('https://images.unsplash.com/photo-1557804506-669a67965ba0?w=1200&h=800&fit=crop');">
            </div>
            <div class="absolute inset-0 bg-primary/70 dark:bg-background-dark/80"></div>
            <div class="relative z-10 flex flex-col gap-8 max-w-md text-white">
                <div class="flex flex-col gap-4 text-left">
                    <h1 class="text-4xl font-black leading-tight tracking-[-0.033em] md:text-5xl">
                        Powering Your Business Success
                    </h1>
                    <h2 class="text-base font-normal leading-normal text-white/90">
                        Access our suite of tools designed to streamline your operations and drive growth.
                    </h2>
                </div>
            </div>
        </div>

        <!-- Right Column (Form Panel) -->
        <div class="flex w-full lg:w-1/2 items-center justify-center bg-white dark:bg-background-dark p-6 sm:p-12">
            <div class="flex w-full max-w-md flex-col gap-8">
                <!-- Heading -->
                <div class="flex min-w-72 flex-col gap-2">
                    <p class="text-text-headings dark:text-text-headings-dark text-3xl font-black leading-tight tracking-[-0.033em]">
                        Sign in to your account
                    </p>
                    <p class="text-text-light dark:text-text-dark text-base font-normal leading-normal">
                        Welcome back! Please enter your details.
                    </p>
                </div>

                {{#if error}}
                    <div class="rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 p-4">
                        <div class="flex items-center gap-3">
                            <span class="material-symbols-outlined text-red-600 dark:text-red-400">error</span>
                            <span class="text-sm text-red-800 dark:text-red-200">{{error}}</span>
                        </div>
                    </div>
                {{/if}}

                <!-- Sign In Form -->
                <form action="/login" method="POST" class="flex w-full flex-col gap-4">
                    <div class="form-group">
                        <label class="form-label" for="email">Work Email</label>
                        <input
                            class="form-input h-12"
                            id="email"
                            name="email"
                            type="email"
                            placeholder="you@company.com"
                            required />
                    </div>

                    <div class="form-group">
                        <div class="flex justify-between items-center mb-2">
                            <label class="form-label !mb-0" for="password">Password</label>
                            <a class="text-primary hover:underline text-sm font-medium dark:text-secondary"
                                href="/forgot-password">
                                Forgot Password?
                            </a>
                        </div>
                        <input
                            class="form-input h-12"
                            id="password"
                            name="password"
                            type="password"
                            placeholder="••••••••"
                            required />
                    </div>

                    <button class="btn btn-primary w-full h-12 mt-2" type="submit">
                        <span class="truncate">Sign In</span>
                    </button>
                </form>

                <!-- SSO/Social Login -->
                <div class="flex flex-col gap-4">
                    <div class="relative flex items-center">
                        <div class="flex-grow border-t border-gray-300 dark:border-gray-600"></div>
                        <span class="flex-shrink mx-4 text-sm text-text-light dark:text-text-dark">OR</span>
                        <div class="flex-grow border-t border-gray-300 dark:border-gray-600"></div>
                    </div>

                    <button
                        class="btn w-full h-12 bg-white dark:bg-white/5 border-2 border-gray-300 dark:border-gray-600 text-text-headings dark:text-text-headings-dark hover:bg-gray-50 dark:hover:bg-white/10 transition-colors">
                        <span class="material-symbols-outlined">mail</span>
                        <span class="truncate ml-2">Sign in with Google</span>
                    </button>

                    <button
                        class="btn w-full h-12 bg-white dark:bg-white/5 border-2 border-gray-300 dark:border-gray-600 text-text-headings dark:text-text-headings-dark hover:bg-gray-50 dark:hover:bg-white/10 transition-colors">
                        <span class="material-symbols-outlined">business</span>
                        <span class="truncate ml-2">Sign in with Microsoft</span>
                    </button>
                </div>

                <!-- Demo Credentials -->
                {{#if showDemo}}
                    <div class="rounded-lg bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 p-4">
                        <p class="text-sm font-semibold text-blue-900 dark:text-blue-200 mb-2">Demo Credentials:</p>
                        <p class="text-xs text-blue-800 dark:text-blue-300"><strong>Email:</strong> john.doe@example.com</p>
                        <p class="text-xs text-blue-800 dark:text-blue-300"><strong>Password:</strong> password123</p>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</main>

<footer class="absolute bottom-0 w-full p-4 bg-transparent">
    <div class="flex justify-center items-center text-xs text-gray-500 dark:text-gray-400 gap-x-6">
        <p>© {{currentYear}} SourcePlatform</p>
        <a class="hover:underline" href="/terms">Terms of Service</a>
        <a class="hover:underline" href="/privacy">Privacy Policy</a>
    </div>
</footer>
