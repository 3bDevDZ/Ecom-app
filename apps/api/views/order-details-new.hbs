{{> header}}

<main class="flex-1 bg-background-light dark:bg-background-dark">
    <div class="page-container">
        <!-- Breadcrumb -->
        <nav class="mb-6 flex items-center gap-2 text-sm">
            <a href="/" class="text-text-light hover:text-primary dark:text-text-dark dark:hover:text-secondary">Home</a>
            <span class="text-gray-400">/</span>
            <a href="/orders" class="text-text-light hover:text-primary dark:text-text-dark dark:hover:text-secondary">Orders</a>
            <span class="text-gray-400">/</span>
            <span class="text-text-headings dark:text-text-headings-dark">#{{order.orderNumber}}</span>
        </nav>

        <!-- Page Header -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
            <div>
                <h1 class="text-3xl font-bold text-text-headings dark:text-text-headings-dark mb-2">
                    Order #{{order.orderNumber}}
                </h1>
                <p class="text-text-light dark:text-text-dark">
                    Placed on {{order.date}} at {{order.time}}
                </p>
            </div>
            <div class="flex gap-3">
                <button class="btn btn-outline" onclick="downloadInvoice()">
                    <span class="material-symbols-outlined mr-2">download</span>
                    Download Invoice
                </button>
                {{#if (eq order.status 'delivered')}}
                    <button class="btn btn-primary" onclick="reorder()">
                        <span class="material-symbols-outlined mr-2">replay</span>
                        Reorder
                    </button>
                {{/if}}
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Order Status Tracker -->
                <div class="card p-6">
                    <h2 class="text-xl font-bold text-text-headings dark:text-text-headings-dark mb-6">Order Status</h2>
                    <div class="relative">
                        <!-- Progress Line -->
                        <div class="absolute left-6 top-6 h-full w-0.5 bg-gray-200 dark:bg-gray-700 -z-10"></div>
                        <div class="absolute left-6 top-6 w-0.5 bg-secondary transition-all duration-500 -z-10"
                             style="height: {{order.progressPercentage}}%;"></div>

                        <!-- Status Steps -->
                        <div class="space-y-8">
                            {{#each order.statusHistory}}
                                <div class="flex items-start gap-4">
                                    <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center
                                               {{#if this.completed}}bg-secondary text-primary{{else}}bg-gray-200 dark:bg-gray-700 text-gray-400{{/if}}">
                                        <span class="material-symbols-outlined">{{this.icon}}</span>
                                    </div>
                                    <div class="flex-1 pt-2">
                                        <h3 class="font-semibold text-text-headings dark:text-text-headings-dark">
                                            {{this.title}}
                                        </h3>
                                        <p class="text-sm text-text-light dark:text-text-dark mt-1">
                                            {{this.description}}
                                        </p>
                                        {{#if this.timestamp}}
                                            <p class="text-xs text-text-light dark:text-text-dark mt-1">
                                                {{this.timestamp}}
                                            </p>
                                        {{/if}}
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>

                <!-- Order Items -->
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold text-text-headings dark:text-text-headings-dark">Order Items</h2>
                    </div>
                    <div class="divide-y divide-gray-200 dark:divide-gray-700">
                        {{#each order.items}}
                            <div class="p-6 flex gap-6">
                                <div class="w-20 h-20 flex-shrink-0 rounded-lg overflow-hidden bg-gray-100 dark:bg-gray-800">
                                    <img src="{{this.product.image}}" alt="{{this.product.name}}" class="w-full h-full object-cover">
                                </div>
                                <div class="flex-1">
                                    <h3 class="font-semibold text-text-headings dark:text-text-headings-dark mb-1">
                                        <a href="/products/{{this.product.id}}" class="hover:text-primary dark:hover:text-secondary">
                                            {{this.product.name}}
                                        </a>
                                    </h3>
                                    <p class="text-sm text-text-light dark:text-text-dark mb-2">
                                        {{this.product.category}}
                                    </p>
                                    <p class="text-sm text-text-light dark:text-text-dark">
                                        Quantity: {{this.quantity}}
                                    </p>
                                </div>
                                <div class="text-right">
                                    <p class="text-lg font-bold text-primary dark:text-secondary">
                                        ${{this.total}}
                                    </p>
                                    {{#if this.discount}}
                                        <p class="text-sm text-gray-400 line-through">
                                            ${{this.originalPrice}}
                                        </p>
                                    {{/if}}
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1 space-y-6">
                <!-- Order Summary -->
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold text-text-headings dark:text-text-headings-dark">Order Summary</h2>
                    </div>
                    <div class="card-body space-y-3">
                        <div class="flex justify-between text-text-light dark:text-text-dark">
                            <span>Subtotal</span>
                            <span class="font-semibold">${{order.subtotal}}</span>
                        </div>
                        <div class="flex justify-between text-text-light dark:text-text-dark">
                            <span>Shipping</span>
                            <span class="font-semibold">${{order.shipping}}</span>
                        </div>
                        {{#if order.discount}}
                            <div class="flex justify-between text-green-600 dark:text-green-400">
                                <span>Discount</span>
                                <span class="font-semibold">-${{order.discount}}</span>
                            </div>
                        {{/if}}
                        <div class="flex justify-between text-text-light dark:text-text-dark">
                            <span>Tax</span>
                            <span class="font-semibold">${{order.tax}}</span>
                        </div>
                        <div class="border-t border-gray-200 dark:border-gray-700 pt-3">
                            <div class="flex justify-between items-baseline">
                                <span class="text-lg font-semibold text-text-headings dark:text-text-headings-dark">Total</span>
                                <span class="text-2xl font-bold text-primary dark:text-secondary">${{order.total}}</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Shipping Information -->
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold text-text-headings dark:text-text-headings-dark">Shipping Information</h2>
                    </div>
                    <div class="card-body space-y-3">
                        <div>
                            <p class="text-sm text-text-light dark:text-text-dark mb-1">Recipient</p>
                            <p class="font-semibold text-text-headings dark:text-text-headings-dark">
                                {{order.shipping.name}}
                            </p>
                        </div>
                        <div>
                            <p class="text-sm text-text-light dark:text-text-dark mb-1">Address</p>
                            <p class="text-text-headings dark:text-text-headings-dark">
                                {{order.shipping.address}}<br>
                                {{order.shipping.city}}, {{order.shipping.state}} {{order.shipping.zip}}<br>
                                {{order.shipping.country}}
                            </p>
                        </div>
                        <div>
                            <p class="text-sm text-text-light dark:text-text-dark mb-1">Phone</p>
                            <p class="text-text-headings dark:text-text-headings-dark">
                                {{order.shipping.phone}}
                            </p>
                        </div>
                        {{#if order.tracking}}
                            <div class="border-t border-gray-200 dark:border-gray-700 pt-3">
                                <p class="text-sm text-text-light dark:text-text-dark mb-1">Tracking Number</p>
                                <p class="font-mono text-sm text-primary dark:text-secondary">
                                    {{order.tracking.number}}
                                </p>
                                <a href="{{order.tracking.url}}" target="_blank" class="text-sm text-primary hover:text-primary-hover dark:text-secondary dark:hover:text-secondary-hover">
                                    Track Package →
                                </a>
                            </div>
                        {{/if}}
                    </div>
                </div>

                <!-- Payment Information -->
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-xl font-bold text-text-headings dark:text-text-headings-dark">Payment Information</h2>
                    </div>
                    <div class="card-body space-y-3">
                        <div>
                            <p class="text-sm text-text-light dark:text-text-dark mb-1">Payment Method</p>
                            <p class="text-text-headings dark:text-text-headings-dark">
                                {{order.payment.method}}
                            </p>
                        </div>
                        {{#if order.payment.last4}}
                            <div>
                                <p class="text-sm text-text-light dark:text-text-dark mb-1">Card Number</p>
                                <p class="text-text-headings dark:text-text-headings-dark">
                                    •••• •••• •••• {{order.payment.last4}}
                                </p>
                            </div>
                        {{/if}}
                        <div>
                            <p class="text-sm text-text-light dark:text-text-dark mb-1">Payment Status</p>
                            <span class="product-badge badge-success">Paid</span>
                        </div>
                    </div>
                </div>

                <!-- Need Help -->
                <div class="card bg-blue-50 dark:bg-blue-900/20 border-blue-200 dark:border-blue-800">
                    <div class="p-6 space-y-3">
                        <div class="flex items-center gap-3">
                            <span class="material-symbols-outlined text-2xl text-blue-600 dark:text-blue-400">support_agent</span>
                            <h3 class="font-semibold text-blue-900 dark:text-blue-200">Need Help?</h3>
                        </div>
                        <p class="text-sm text-blue-800 dark:text-blue-300">
                            Contact our support team if you have any questions about your order.
                        </p>
                        <a href="/support" class="btn btn-outline w-full text-blue-600 border-blue-600 hover:bg-blue-600 hover:text-white dark:text-blue-400 dark:border-blue-400">
                            Contact Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

{{> footer}}

<script>
function downloadInvoice() {
    window.location.href = '/api/orders/{{order.id}}/invoice';
}

function reorder() {
    if (!confirm('Add all items from this order to your cart?')) return;

    fetch('/api/orders/{{order.id}}/reorder', {
        method: 'POST'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            window.location.href = '/cart';
        } else {
            alert('Error reordering');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error reordering');
    });
}
</script>
