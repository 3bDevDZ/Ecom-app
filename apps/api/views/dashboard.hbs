{{> navigation}}

<div class="dashboard">
    <div class="dashboard-header">
        <h1 class="dashboard-title">Welcome back, {{user.name}}!</h1>
        <p class="dashboard-subtitle">Here's what's happening with your account today.</p>
    </div>

    <div class="dashboard-stats">
        <div class="stat-card">
            <div class="stat-icon">üì¶</div>
            <div class="stat-content">
                <div class="stat-label">Total Orders</div>
                <div class="stat-value">{{recentOrders.length}}</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">üöö</div>
            <div class="stat-content">
                <div class="stat-label">In Transit</div>
                <div class="stat-value">1</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">‚úÖ</div>
            <div class="stat-content">
                <div class="stat-label">Delivered</div>
                <div class="stat-value">0</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">üõí</div>
            <div class="stat-content">
                <div class="stat-label">Cart Items</div>
                <div class="stat-value">0</div>
            </div>
        </div>
    </div>

    <div class="dashboard-content">
        <div class="dashboard-main">
            <div class="section-card">
                <div class="section-header">
                    <h2 class="section-title">Recent Orders</h2>
                    <a href="/orders" class="section-link">View All ‚Üí</a>
                </div>

                {{#if recentOrders}}
                    <div class="orders-list">
                        {{#each recentOrders}}
                            <a href="/orders/{{this.id}}" class="order-item">
                                <div class="order-info">
                                    <div class="order-id">Order #{{this.id}}</div>
                                    <div class="order-date">{{formatDate this.createdAt}}</div>
                                </div>
                                <div class="order-status">
                                    <span class="status-badge status-{{this.status}}">{{this.status}}</span>
                                </div>
                                <div class="order-total">
                                    {{formatMoney this.totalAmount.amount this.totalAmount.currency}}
                                </div>
                            </a>
                        {{/each}}
                    </div>
                {{else}}
                    <div class="empty-state">
                        <div class="empty-icon">üì¶</div>
                        <p class="empty-title">No orders yet</p>
                        <p class="empty-text">Start shopping to see your orders here</p>
                        <a href="/products" class="btn btn-primary">Browse Products</a>
                    </div>
                {{/if}}
            </div>
        </div>

        <div class="dashboard-sidebar">
            <div class="section-card">
                <h3 class="section-title">Quick Actions</h3>
                <div class="quick-actions">
                    <a href="/products" class="action-button">
                        <span class="action-icon">üõçÔ∏è</span>
                        <span>Shop Products</span>
                    </a>
                    <a href="/orders" class="action-button">
                        <span class="action-icon">üìã</span>
                        <span>View Orders</span>
                    </a>
                    <a href="/profile" class="action-button">
                        <span class="action-icon">üë§</span>
                        <span>Edit Profile</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
