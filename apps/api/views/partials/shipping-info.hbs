<div class="shipping-info">
    <h2 class="shipping-title">Shipping Information</h2>

    <div class="info-section">
        <div class="info-header">
            <span class="info-icon">üìç</span>
            <h3 class="info-subtitle">Delivery Address</h3>
        </div>
        <div class="address-block">
            <div>{{order.shippingAddress.street}}</div>
            <div>{{order.shippingAddress.city}}, {{order.shippingAddress.state}} {{order.shippingAddress.postalCode}}</div>
            <div>{{order.shippingAddress.country}}</div>
        </div>
    </div>

    <div class="info-section">
        <div class="info-header">
            <span class="info-icon">üöö</span>
            <h3 class="info-subtitle">Shipping Method</h3>
        </div>
        <div class="shipping-method">{{order.shippingInfo.method}}</div>
    </div>

    {{#if order.shippingInfo.trackingNumber}}
        <div class="info-section">
            <div class="info-header">
                <span class="info-icon">üì¶</span>
                <h3 class="info-subtitle">Tracking Information</h3>
            </div>
            <div class="tracking-info">
                <div class="tracking-number">
                    <span class="tracking-label">Tracking Number:</span>
                    <span class="tracking-value">{{order.shippingInfo.trackingNumber}}</span>
                </div>
                <button onclick="alert('Tracking: {{order.shippingInfo.trackingNumber}}')" class="btn-track">
                    Track Package
                </button>
            </div>
        </div>
    {{/if}}

    {{#if (or order.shippingInfo.estimatedDelivery order.shippingInfo.actualDelivery)}}
        <div class="info-section">
            <div class="info-header">
                <span class="info-icon">üìÖ</span>
                <h3 class="info-subtitle">Delivery Date</h3>
            </div>
            <div class="delivery-dates">
                {{#if order.shippingInfo.estimatedDelivery}}
                    <div class="delivery-item">
                        <span class="delivery-label">Estimated:</span>
                        <span class="delivery-value">{{formatDate order.shippingInfo.estimatedDelivery}}</span>
                    </div>
                {{/if}}
                {{#if order.shippingInfo.actualDelivery}}
                    <div class="delivery-item">
                        <span class="delivery-label">Delivered:</span>
                        <span class="delivery-value delivered">{{formatDate order.shippingInfo.actualDelivery}}</span>
                    </div>
                {{/if}}
            </div>
        </div>
    {{/if}}
</div>
