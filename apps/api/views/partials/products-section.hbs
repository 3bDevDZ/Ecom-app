<div class="products-section">
    <h2 class="products-title">Order Items</h2>
    <div class="products-list">
        {{#each order.items}}
            <div class="product-item">
                <div class="product-image-container">
                    <img src="{{this.productImage}}" alt="{{this.productName}}" class="product-image"
                         onerror="this.src='https://via.placeholder.com/100x100?text=No+Image'">
                </div>
                <div class="product-details">
                    <div class="product-name">{{this.productName}}</div>
                    {{#if this.variant}}
                        <div class="product-variants">
                            {{#each this.variant}}
                                <span class="variant-badge">{{@key}}: {{this}}</span>
                            {{/each}}
                        </div>
                    {{/if}}
                    <div class="product-meta">
                        <span class="product-price">{{formatMoney this.unitPrice.amount this.unitPrice.currency}}</span>
                        <span class="product-quantity">Qty: {{this.quantity}}</span>
                    </div>
                </div>
                <div class="product-subtotal">
                    <div class="subtotal-label">Subtotal</div>
                    <div class="subtotal-value">{{formatMoney this.subtotal.amount this.subtotal.currency}}</div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
