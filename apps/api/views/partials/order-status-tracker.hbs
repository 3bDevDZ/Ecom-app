<div class="order-status-tracker">
    <h2 class="tracker-title">Order Status</h2>

    {{#if isCancelledOrRefunded}}
        <div class="status-alert {{statusClass}}">
            <span class="alert-icon">⚠️</span>
            <div class="alert-content">
                <strong>Order {{status}}</strong>
                <p>
                    {{#if (eq status 'CANCELLED')}}
                        This order has been cancelled
                    {{else}}
                        This order has been refunded
                    {{/if}}
                </p>
            </div>
        </div>
    {{else}}
        <div class="status-steps">
            {{#each statusSteps}}
                <div class="step-container">
                    <div class="step {{#if this.isCompleted}}completed{{/if}} {{#if this.isCurrent}}current{{/if}}">
                        <div class="step-circle">
                            {{#if this.isCompleted}}
                                <span class="checkmark">✓</span>
                            {{else}}
                                <span class="step-number">{{this.stepNumber}}</span>
                            {{/if}}
                        </div>
                        <div class="step-content">
                            <div class="step-label">{{this.label}}</div>
                            <div class="step-description">{{this.description}}</div>
                        </div>
                    </div>
                    {{#unless this.isLast}}
                        <div class="step-connector {{#if this.isCompleted}}completed{{/if}}"></div>
                    {{/unless}}
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>
