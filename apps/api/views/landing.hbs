{{> header}}

<main class="flex flex-1 flex-col items-center py-5 sm:py-8 md:py-12">
    <div class="flex w-full max-w-7xl flex-col gap-12 px-4 sm:px-8 md:px-10 md:gap-16">
        <!-- Hero Section -->
        <section
            class="min-h-[480px] w-full rounded-xl flex flex-col gap-6 bg-cover bg-center bg-no-repeat items-start justify-end px-6 pb-10 sm:px-10 sm:pb-12"
            style='background-image: linear-gradient(rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0.6) 100%), url("https://images.unsplash.com/photo-1557804506-669a67965ba0?w=1200&h=600&fit=crop");'>
            <div class="flex max-w-3xl flex-col gap-4 text-left">
                <h1 class="text-white text-4xl font-black leading-tight tracking-[-0.033em] sm:text-5xl">
                    The Premier Sourcing Platform for Your Industry
                </h1>
                <p class="text-slate-200 text-base font-normal leading-normal sm:text-lg">
                    Streamline your procurement process with our curated selection of high-quality products and reliable suppliers.
                </p>
            </div>
            <div class="flex flex-wrap gap-4">
                <a href="/products" class="btn btn-secondary btn-lg">
                    <span class="truncate">View Products</span>
                </a>
                <a href="#contact" class="btn bg-white text-text-headings hover:opacity-90 btn-lg dark:bg-slate-200">
                    <span class="truncate">Get in Touch</span>
                </a>
            </div>
        </section>

        <!-- Trusted Companies Section -->
        <section class="w-full">
            <div class="flex flex-col items-center gap-6 rounded-xl bg-white p-6 dark:bg-slate-800/50">
                <h3 class="text-center text-sm font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400">
                    Trusted by leading companies worldwide
                </h3>
                <div class="flex w-full flex-wrap items-center justify-center gap-x-12 gap-y-6 sm:justify-between opacity-50">
                    <div class="h-8 w-24 bg-gray-300 dark:bg-gray-600 rounded"></div>
                    <div class="h-8 w-24 bg-gray-300 dark:bg-gray-600 rounded"></div>
                    <div class="h-8 w-24 bg-gray-300 dark:bg-gray-600 rounded"></div>
                    <div class="h-8 w-24 bg-gray-300 dark:bg-gray-600 rounded"></div>
                    <div class="h-8 w-24 bg-gray-300 dark:bg-gray-600 rounded"></div>
                </div>
            </div>
        </section>

        <!-- Product Showroom Section -->
        <section class="w-full">
            <div class="flex flex-col items-center text-center">
                <h2 class="text-text-headings dark:text-text-headings-dark text-2xl font-bold leading-tight tracking-[-0.015em] sm:text-3xl">
                    Our Product Showroom
                </h2>
                <p class="mt-2 max-w-2xl text-text-light dark:text-text-dark">
                    Explore our curated collection of high-quality products. Contact us for detailed specifications and partnership inquiries.
                </p>
            </div>
            <div class="mt-8 grid grid-cols-2 gap-6 sm:grid-cols-2 lg:grid-cols-4">
                {{#each categories}}
                    <a href="/products?category={{this.slug}}" class="product-card">
                        <div class="product-image-wrapper">
                            <div class="absolute inset-0 bg-cover bg-center bg-no-repeat transition-transform duration-300 group-hover:scale-110"
                                style='background-image: url("{{this.image}}");'>
                            </div>
                        </div>
                        <div class="text-center">
                            <p class="text-base font-semibold text-text-headings dark:text-text-headings-dark">
                                {{this.name}}
                            </p>
                        </div>
                    </a>
                {{else}}
                    {{!-- Default categories if none provided --}}
                    <a href="/products?category=electronics" class="product-card">
                        <div class="product-image-wrapper">
                            <div class="absolute inset-0 bg-gradient-to-br from-blue-400 to-blue-600"></div>
                        </div>
                        <div class="text-center">
                            <p class="text-base font-semibold text-text-headings dark:text-text-headings-dark">Electronics</p>
                        </div>
                    </a>
                    <a href="/products?category=office" class="product-card">
                        <div class="product-image-wrapper">
                            <div class="absolute inset-0 bg-gradient-to-br from-green-400 to-green-600"></div>
                        </div>
                        <div class="text-center">
                            <p class="text-base font-semibold text-text-headings dark:text-text-headings-dark">Office Supplies</p>
                        </div>
                    </a>
                    <a href="/products?category=industrial" class="product-card">
                        <div class="product-image-wrapper">
                            <div class="absolute inset-0 bg-gradient-to-br from-purple-400 to-purple-600"></div>
                        </div>
                        <div class="text-center">
                            <p class="text-base font-semibold text-text-headings dark:text-text-headings-dark">Industrial</p>
                        </div>
                    </a>
                    <a href="/products?category=technology" class="product-card">
                        <div class="product-image-wrapper">
                            <div class="absolute inset-0 bg-gradient-to-br from-orange-400 to-orange-600"></div>
                        </div>
                        <div class="text-center">
                            <p class="text-base font-semibold text-text-headings dark:text-text-headings-dark">Technology</p>
                        </div>
                    </a>
                {{/each}}
            </div>
        </section>

        <!-- Contact Form Section -->
        <section id="contact" class="w-full rounded-xl bg-white dark:bg-slate-800/50 p-6 sm:p-8 lg:p-12">
            <div class="grid grid-cols-1 gap-10 lg:grid-cols-2">
                <div class="flex flex-col justify-center">
                    <h2 class="text-2xl font-bold text-text-headings dark:text-text-headings-dark sm:text-3xl">
                        Get in Touch
                    </h2>
                    <p class="mt-3 text-text-light dark:text-text-dark">
                        Have questions or need a custom quote? Our sales team is ready to help you find the perfect solution for your business. Fill out the form, and we'll get back to you within 24 hours.
                    </p>
                </div>
                <form action="/contact" method="POST" class="grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-8">
                    <div>
                        <label class="form-label" for="name">Name</label>
                        <input autocomplete="name" class="form-input" id="name" name="name" type="text" required />
                    </div>
                    <div>
                        <label class="form-label" for="company_name">Company Name</label>
                        <input autocomplete="organization" class="form-input" id="company_name" name="company_name" type="text" />
                    </div>
                    <div class="sm:col-span-2">
                        <label class="form-label" for="email">Email</label>
                        <input autocomplete="email" class="form-input" id="email" name="email" type="email" required />
                    </div>
                    <div class="sm:col-span-2">
                        <label class="form-label" for="phone_number">Phone Number</label>
                        <input autocomplete="tel" class="form-input" id="phone_number" name="phone_number" type="tel" />
                    </div>
                    <div class="sm:col-span-2">
                        <label class="form-label" for="message">Message</label>
                        <textarea class="form-textarea" id="message" name="message" rows="4" required></textarea>
                    </div>
                    <div class="sm:col-span-2">
                        <button class="btn btn-primary w-full" type="submit">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </section>
    </div>
</main>

{{> footer}}
