{
  "rabbit_version": "3.12.0",
  "rabbitmq_version": "3.12.0",
  "users": [
    {
      "name": "ecommerce",
      "password": "ecommerce_password",
      "tags": "administrator"
    }
  ],
  "vhosts": [
    {
      "name": "/"
    }
  ],
  "permissions": [
    {
      "user": "ecommerce",
      "vhost": "/",
      "configure": ".*",
      "write": ".*",
      "read": ".*"
    }
  ],
  "parameters": [],
  "global_parameters": [
    {
      "name": "cluster_name",
      "value": "b2b-ecommerce"
    }
  ],
  "policies": [
    {
      "vhost": "/",
      "name": "ha-all",
      "pattern": ".*",
      "apply-to": "all",
      "definition": {
        "ha-mode": "all",
        "ha-sync-mode": "automatic"
      },
      "priority": 0
    }
  ],
  "queues": [
    {
      "name": "order.events",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-message-ttl": 604800000,
        "x-max-length": 100000
      }
    },
    {
      "name": "product.events",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-message-ttl": 604800000,
        "x-max-length": 100000
      }
    },
    {
      "name": "inventory.events",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-message-ttl": 604800000,
        "x-max-length": 100000
      }
    },
    {
      "name": "landing-cms.events",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-message-ttl": 604800000,
        "x-max-length": 50000
      }
    },
    {
      "name": "email.notifications",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-message-ttl": 86400000,
        "x-max-length": 50000
      }
    },
    {
      "name": "dead-letter",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {}
    }
  ],
  "exchanges": [
    {
      "name": "ecommerce.events",
      "vhost": "/",
      "type": "direct",
      "durable": true,
      "auto_delete": false,
      "internal": false,
      "arguments": {}
    },
    {
      "name": "ecommerce.dlx",
      "vhost": "/",
      "type": "fanout",
      "durable": true,
      "auto_delete": false,
      "internal": false,
      "arguments": {}
    }
  ],
  "bindings": [
    {
      "source": "ecommerce.events",
      "vhost": "/",
      "destination": "order.events",
      "destination_type": "queue",
      "routing_key": "order.*",
      "arguments": {}
    },
    {
      "source": "ecommerce.events",
      "vhost": "/",
      "destination": "product.events",
      "destination_type": "queue",
      "routing_key": "product.*",
      "arguments": {}
    },
    {
      "source": "ecommerce.events",
      "vhost": "/",
      "destination": "inventory.events",
      "destination_type": "queue",
      "routing_key": "inventory.*",
      "arguments": {}
    },
    {
      "source": "ecommerce.events",
      "vhost": "/",
      "destination": "landing-cms.events",
      "destination_type": "queue",
      "routing_key": "landing-cms.*",
      "arguments": {}
    },
    {
      "source": "ecommerce.events",
      "vhost": "/",
      "destination": "email.notifications",
      "destination_type": "queue",
      "routing_key": "email.*",
      "arguments": {}
    },
    {
      "source": "ecommerce.dlx",
      "vhost": "/",
      "destination": "dead-letter",
      "destination_type": "queue",
      "routing_key": "",
      "arguments": {}
    }
  ]
}
